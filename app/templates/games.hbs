{{render "header"}}
{{! this page uses a button row in the navbar. modify navbar with navbar-button-row for proper button spacing}}
<div class="navbar xnavbar-inverse navbar-button-row">
    <div class="container-fluid block-grid-row block-color-header">
            <span class="navbar-text">Please select a game to grade</span>
        {{#header-button class="pull-right" action="createGame"}}create new game{{/header-button}}
    </div>
</div>

<div class='container-fluid container-button-row games'>
    <table cellpadding=0 cellspacing=0 class="table games-list">
        <tbody>
            {{#each item in controller}}
            <tr class="games-list-home">
                <td class="td1 games-list-ltgray">Home</td>
                <td class="td2">{{item.homeTeam}}</td>
                <td class="td3">{{item.homeScore}}</td>
                <td class="td4 games-list-ltgray">Date</td>
                <td class="td5">{{item.date}}</td>
                <td class="td6 games-list-ltgray">Surface</td>
                <td class="td7">{{item.surface}}</td>
                <td class="td8" rowspan="2"><button class="btn btn-gd-menu btn-gd-menu-alt btn-xl pull-right" {{action "gradeGame" item}}>grade game</button></td>
            </tr>
            <tr class="games-list-visitor">
                <td class="td1 games-list-ltgray">Visitor</td>
                <td class="td2">{{item.visitorTeam}}</td>
                <td class="td3">{{item.visitorScore}}</td>
                <td class="td4 games-list-ltgray">Kickoff</td>
                <td class="td5">{{item.kickoff}}</td>
                <td class="td6 games-list-ltgray">Field Cond</td>
                <td class="td7">{{item.fieldCond}}</td>
            </tr>
            {{else}}
            <tr>
                <td>no games...</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>


